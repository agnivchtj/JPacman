<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="startPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../resources/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StartMenuController">
    <children>
        <ImageView fitHeight="450.0" fitWidth="700.0" layoutX="-1.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../resources/pacman_logo.png" />
            </image>
        </ImageView>

        <Button layoutX="234.0" layoutY="205.0" mnemonicParsing="false" onAction="#enterNickname" prefHeight="61.0" prefWidth="141.0" style="-fx-background-color: #F77D03; -fx-background-radius: 5; -fx-border-color: #D9091C; -fx-border-width: 3; -fx-border-radius: 5;" text="Enter Game!">
            <font>
                <Font name="Segoe UI Black" size="17.0" />
            </font>
        </Button>

        <Button layoutX="144.0" layoutY="289.0" mnemonicParsing="false" onAction="#viewStats" prefHeight="61.0" prefWidth="141.0" text="Statistics">
            <font>
                <Font name="Segoe UI Semibold" size="13.0" />
            </font>
        </Button>

        <Button layoutX="500.0" layoutY="23.0" mnemonicParsing="false" onAction="#logout" prefHeight="17.0" prefWidth="71.0" stylesheets="@../../resources/styles.css" text="Logout">
            <font>
                <Font name="Segoe UI Semilight" size="12.0" />
            </font>
        </Button>

        <ImageView fitHeight="20.0" fitWidth="23.0" layoutX="14.0" layoutY="26.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../resources/transparent_icon.png" />
            </image>
        </ImageView>

        <Button layoutX="44.0" layoutY="23.0" onAction="#disclaimerOnClick" stylesheets="@../../resources/styles.css" text="Disclaimer" textFill="#1e0808">
            <font>
                <Font name="Segoe UI Semibold" size="12.0" />
            </font>
        </Button>
      <Button layoutX="325.0" layoutY="289.0"  mnemonicParsing="false" onAction="#leaderboardMenu" prefHeight="61.0" prefWidth="141.0" text="Leaderboard">
         <font>
            <Font name="Segoe UI Semibold" size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
